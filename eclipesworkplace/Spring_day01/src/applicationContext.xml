<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xmlns="http://www.springframework.org/schema/beans"  
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd ">
	<!-- scope 默认是singleton 单例创建 
	    prototpe是多例创建
	 -->
	<!--  set方式注入 -->
	<bean class="com.heima.bean.User" name="user" scope="prototype">
		<property name="name" value="xiaohai"></property>
		<property name="age" value="18"></property>
<!-- 		把车子的引用进来用  ref  
 -->	<property name="car" ref="car"></property>
	</bean>
	<!-- -index和type 用来区分每一个构造的区别  构造方法是注入-->
     <bean class="com.heima.bean.User" name="user1">
     	<constructor-arg name="name" value="大本ben"></constructor-arg>
     	<constructor-arg name="car" ref="car"></constructor-arg>
     </bean>
     
	<!--  把car这个对象创建出来 -->
	<bean name="car" class="com.heima.bean.Car">
	<property name="name" value="大众"></property>
	<property name="color" value="白色"></property>
	</bean>
</beans>